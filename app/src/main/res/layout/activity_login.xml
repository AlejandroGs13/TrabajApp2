<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.alejandrogs.trabajapp.LoginActivity">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:fontFamily="cursive"
        android:id="@+id/label"
        android:text="@string/trabajapp"
        android:layout_marginTop="20dp"
        android:textSize="42sp" />


    <android.support.design.widget.TextInputLayout
        android:id="@+id/layout_usu"
        android:layout_width="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/label"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp">

        <EditText
            android:id="@+id/edit_usu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Correo:" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_usu"
        android:hint="ContraseÃ±a:"
        app:passwordToggleEnabled="true"
        app:counterMaxLength="30"
        android:id="@+id/layout_edt"
        app:counterEnabled="true"
        >
        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="16dp"
            android:paddingBottom="8dp"
            android:inputType="textPassword"
            android:id="@+id/edt_pass"/>
    </android.support.design.widget.TextInputLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_edt"
        android:text="Ingresa"
        android:textSize="18sp"
        android:layout_marginTop="20dp"
        android:id="@+id/btn_login"
        android:layout_centerHorizontal="true"
        android:theme="@style/MyButton"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_login"
        android:text="Registrate"
        android:textSize="18sp"
        android:id="@+id/btn_registrate"
        android:layout_centerHorizontal="true"
        android:theme="@style/MyButton"/>


</RelativeLayout>

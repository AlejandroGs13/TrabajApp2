<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.alejandrogs.trabajapp.ProfileFragment">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/ImageProfile"
            android:layout_marginTop="25dp"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:layout_width="match_parent"
            android:id="@+id/txtname"
            android:layout_below="@+id/ImageProfile"
            android:layout_marginTop="15dp"
            android:text="David Alejandro Garcia Sanchez"
            android:textAlignment="center"
            android:textSize="18sp"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_marginTop="15dp"
            android:id="@+id/vive"
            android:layout_below="@+id/txtname"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/txtcity"
            android:text="Ocotlan"
            android:textAlignment="center"
            android:textSize="18sp"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/txtcountry"
            android:layout_marginStart="25dp"
            android:layout_toEndOf="@+id/txtcity"
            android:text="Mexico"
            android:textSize="18sp"
            android:layout_height="wrap_content" />

        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="David@gmail.com"
            android:textAlignment="center"
            android:textSize="18sp"
            android:id="@+id/email"
            android:layout_below="@+id/vive"
            android:layout_marginTop="20dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="3921057448"
            android:textAlignment="center"
            android:id="@+id/phone"
            android:textSize="18sp"
            android:layout_below="@+id/email"
            android:layout_marginTop="20dp"/>

        <RatingBar
            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/phone"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="24dp" />
    </RelativeLayout>



</FrameLayout>
